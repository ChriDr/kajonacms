<!-- available placeholders: link_href, image_src, image_title, image_x, image_x -->
<imageWithLink>
    <div><a href="%%link_href%%"><img src="%%image_src%%" alt="%%image_title%%" /></a></div>
    <div>%%image_title%%</div>
</imageWithLink>

<!-- available placeholders: image_src, image_title, image_x, image_x -->
<imageWithoutLink>
    <div><img src="%%image_src%%" alt="%%image_title%%" /></div>
    <div>%%image_title%%</div>
</imageWithoutLink>
